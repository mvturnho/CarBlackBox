void process_serial() {
	int incomingByte;
	if (bts.available() > 0) {
		incomingByte = bts.read();
		if (incomingByte == '\n' || incomingByte == '\r') {
#if defined(DEBUG)
			Serial.println("found newline");
#endif
			execute();
			clearbuf();
			varcount = 0;
		} else if (incomingByte == ' ') {
			getcommand();
			clearbuf();
		} else if (incomingByte == ',') {
			storevar();
			varcount++;
			clearbuf();
		} else if (incomingByte == '.') {
			execute();
			clearbuf();
			varcount = 0;
		} else {
			buf[bc] = incomingByte;
			bc++;
		}
	}
}

