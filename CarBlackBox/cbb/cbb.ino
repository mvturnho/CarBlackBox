		bts.println("switch MAIN screen");
		break;
	case satscreen:
		setScreen(sat_scr);
		bts.println("switch SAT screen");
		break;
	case nextscreen:
		button_state = true;
		bts.println("switch NEXT screen");
		break;
	case get: //get obd values
		if (val == 5) //05 = temp
			bts.println(obdspeed);
